{
	"name": "Contas Turbo",
	"version": "1.3",
	"manifest_version": 2,
	"description": "Gere Links Premium com apenas 1 clique com o Plugin Contas Turbo!",
	"icons": {
		"128": "images/icon128.png",
		"64": "images/icon64.png",
		"48": "images/icon48.png",
		"24": "images/icon24.png",
		"16": "images/icon16.png"
	},
	"browser_action": {
		"default_icon": "images/icon48.png",
		"default_title": "Plugin Contas Turbo"
	},
	"background": {
		"page": "background.html"
	},
	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	]
}